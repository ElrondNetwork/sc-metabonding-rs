            "step": "externalSteps",
            "path": "add_checkpoints.scen.json"
        },
        {
            "step": "scCall",
            "txId": "unpause",
            "tx": {
                "from": "address:owner",
                "to": "sc:meta",
                "function": "unpause",
                "arguments": [],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0",
                "logs": "*",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "setState",
            "comment": "week 6",
            "currentBlockInfo": {
                "blockEpoch": "50"
            }
        },
        {
            "step": "scQuery",
            "txId": "get-rewards-week-1",
            "tx": {
                "to": "sc:meta",
                "function": "getRewardsForWeek",
                "arguments": [
                    "1",
                    "25,000",
                    "0"
                ]
            },
            "expect": {
                "out": [
                    "str:FirstProj",
                    "str:PROJ-123456",
                    "83,333,333"
                ],
                "status": "0",
                "logs": "*"
            }
        },
        {
            "step": "scQuery",
            "txId": "get-claimable-weeks",
            "tx": {
                "to": "sc:meta",
                "function": "getUserClaimableWeeks",
                "arguments": [
                    "address:user1"
                ]
            },
            "expect": {
                "out": [
                    "1",
                    "2"
                ],
                "status": "0",
                "logs": "*"
            }
        },
        {
            "step": "scCall",
            "txId": "user-1-claim-week-1-too-late",
            "tx": {
                "from": "address:user1",
                "to": "sc:meta",
                "function": "claimRewards",
                "arguments": [
                    "1",
                    "25,000",
                    "0",
                    "0xd47c0d67b2d25de8b4a3f43d91a2b5ccb522afac47321ae80bf89c90a4445b26adefa693ab685fa20891f736d74eb2dedc11c4b1a8d6e642fa28df270d6ebe08"
